<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dialogLayout" >
    <TableLayout
        android:layout_width="fill_parent"
   		android:layout_height="fill_parent"
		android:paddingRight="10dip">
   	    <TableRow
       	    android:paddingTop="5dip"
   			android:paddingBottom="5dip"
       		android:layout_width="fill_parent">
            <TextView
                android:text="Type of Drink"
                android:textColor="#000000"
                android:textSize="15sp"
   	            android:id="@+id/textview_drink_type"
       	        android:layout_centerVertical="true"
           	    android:layout_weight="50" />
            <Spinner
                android:id="@+id/spinner_drink"
                android:textColor="#000000"
   	            android:drawSelectorOnTop="true"
       	        android:layout_weight="50" />
        </TableRow>
		<TableRow
            android:paddingTop="5dip"
            android:layout_width="fill_parent">
   	        <TextView
				android:text="% ABV\nBeer: 3% - 15%"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:id="@+id/textview_abv"
                android:layout_alignTop="@+id/edittext_abv"
                android:layout_weight="50" />
            <EditText 
                android:inputType="number|numberDecimal"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:id="@+id/edittext_abv"
                android:layout_weight="50" />
        </TableRow>
        <TableRow
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="fill_parent">
            <TextView 
                android:text="Number of Drinks For\nThis Type of Drink"
                android:textColor="#000000"
                android:textSize="15sp"
                android:paddingTop="5dip"
                android:paddingBottom="5dip"
                android:layout_centerVertical="true"
                android:layout_weight="50" />
            <EditText
                android:inputType="number"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:id="@+id/edittext_num_drinks"
                android:layout_weight="50" />
        </TableRow>
        <TableRow
            android:paddingTop="5dip"
            android:paddingBottom="5dip"
            android:layout_width="fill_parent">
            <TextView
                android:text="Ounces per drink"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_centerVertical="true"
                android:layout_weight="50" />
            <EditText
                android:inputType="number|numberDecimal"
                android:textColor="#000000"
                android:textCursorDrawable="@null"
                android:id="@+id/edittext_ounces_per_drink"
                android:layout_weight="50" />
        </TableRow>
	</TableLayout>
</LinearLayout>
